alias emacs='env XMODIFIERS= emacs'
alias e='emacsclient -n'

alias emacsq='emacs -mm -Q -l ~/myconf/emacs/basic.el &'
alias emacsp='emacs -mm -Q -l ~/myconf/emacs/init-basic-packages.el &'
alias emacscpp='emacs -mm -Q -l ~/myconf/emacs/init-cpp.el &'
alias gnus='emacs -mm -Q -l ~/myconf/emacs/gnus.el &'

alias ctrlc='xclip -selection c'
alias ctrlv='xclip -selection c -o'
alias xopen='xdg-open'

alias drae='sdcv -u drae'
alias e2s='sdcv -u "English-Spanish dictionary"'
alias s2e='sdcv -u "Spanish-English dictionary"'
alias e2e='sdcv -u "Concise Oxford English Dictionary (En-En)"'

alias meminfo='egrep --color "Mem|Cache|Swap" /proc/meminfo'
